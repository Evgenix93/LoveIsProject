<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoveIs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="title">

        <item name="fontFamily">sans-serif-medium</item>

        <item name="android:textSize">
            34sp
        </item>

        <item name="android:letterSpacing">
            0.01
        </item>

        <item name="android:textColor">
            ?attr/colorPrimaryVariant
        </item>

    </style>


    <style name="buttonFilled">
        <item name="android:background">@drawable/filled_button</item>
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">-0.02</item>

    </style>

    <style name="buttonOutlined">
        <item name="android:background">@drawable/ic__oulined_button</item>
        <item name="backgroundTint">@color/pink</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">
            -0.02
        </item>

    </style>

    <style name="buttonRemovePerson">
        <item name="android:background">@drawable/outlined_button_remove_person</item>
        <item name="backgroundTint">@color/remove_person</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/remove_person</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">
            -0.03
        </item>
    </style>



    <style name="infoText">
        <item name="android:textSize">
            24sp
        </item>

        <item name="android:fontFamily">@font/roboto_regular</item>

        <item name="android:letterSpacing">
            -0.02
        </item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="infoText2">

        <item name="android:textSize">
            17sp
        </item>

        <item name="android:letterSpacing">
            -0.02
        </item>

        <item name="android:textColor">
            #000000
        </item>

    </style>


    <style name="infoText3">
        <item name="android:textSize">
            20sp
        </item>

        <item name="android:fontFamily">@font/roboto_regular</item>

        <item name="android:letterSpacing">
            -0.02
        </item>

        <item name="android:textColor">@color/gray2</item>
    </style>

    <style name="infoText4">

        <item name="android:textSize">
            18sp
        </item>

        <item name="android:letterSpacing">
            -0.02
        </item>

        <item name="android:textColor">
            #007AFF
        </item>

        <item name="android:fontFamily">
            @font/roboto_regular
        </item>

    </style>

    <style name="loveIsStatusText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="InputStyle" >
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="backgroundTint">@color/white</item>


        <item name="android:letterSpacing">
            -0.01
        </item>



    </style>

    <style name="hint">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/hint</item>
    </style>

    <style name="chipsStyle">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="chipMinHeight">43dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">
            -0.02
        </item>
        <item name="chipCornerRadius">9dp</item>


    </style>

    <style name="messengerCard">
        <item name="android:width">58dp</item>
        <item name="android:height">53dp</item>
        <item name="cardCornerRadius">13dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="loveIsUsersText">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>



    </style>

    <style name="some_id">

        <item name="android:textSize">
            10sp
        </item>

        <item name="android:textColor">
            #333333
        </item>
        <item name="android:fontFamily">
            @font/roboto_medium
        </item>

    </style>

    <style name="loveIs_EventIs_typeCard_Checked">
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="loveIs_EventIs_typeCard_NotChecked">
        <item name="cardCornerRadius">15dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/gray</item>
    </style>

    <style name="filterText">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:letterSpacing">
            -0.03
        </item>

        <item name="android:textColor">
            #33000000
        </item>

    </style>

    <style name="NavItemStyle">
        <item name="android:layout_width">82.2dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>




</resources>