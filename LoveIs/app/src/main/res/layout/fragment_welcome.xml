<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/smileImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/smile"
        app:layout_constraintBottom_toTopOf="@+id/infoMustBeRealTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acceptRulesTextView" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1sp"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textAppearance="@style/title"
        app:layout_constraintBottom_toTopOf="@+id/acceptRulesTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/acceptRulesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept_rules"
        android:textAlignment="center"
        android:textAppearance="@style/infoText"
        app:layout_constraintBottom_toTopOf="@+id/smileImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextView" />


    <TextView
        android:id="@+id/infoMustBeRealTextView"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:text="@string/info_must_be_real"
        android:textAlignment="center"
        android:textAppearance="@style/infoText"
        app:layout_constraintBottom_toTopOf="@+id/shieldImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smileImageView" />

    <ImageView
        android:id="@+id/shieldImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/shield"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoMustBeRealTextView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_not_hurry"
        android:textAlignment="center"
        android:textAppearance="@style/infoText"
        app:layout_constraintBottom_toTopOf="@+id/continueBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shieldImageView" />

    <TextView
        android:id="@+id/safetyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/safety"
        android:textAppearance="@style/infoText"
        android:textColor="?attr/colorPrimaryVariant"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/beYourselfTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/be_yourself"
        android:textAppearance="@style/infoText"
        android:textColor="?attr/colorPrimaryVariant"
        app:layout_constraintBottom_toTopOf="@+id/infoMustBeRealTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueBtn"
        style="@style/buttonFilled"
        android:layout_width="371dp"
        android:layout_height="55dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/filled_button"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>